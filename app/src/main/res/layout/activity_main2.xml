<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".activity.Main2Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="Body Photo Suit"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginHorizontal="@dimen/_30sdp">


        <FrameLayout
            android:id="@+id/llCamera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/bg_main_button_title"
                android:gravity="center"
                android:text="Camera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_main_button_icon"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/camera" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/llGallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/bg_main_button_title"
                android:gravity="center"
                android:text="Gallery"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_main_button_icon"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/gallery" />
        </FrameLayout>



        <FrameLayout
            android:id="@+id/llShare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/bg_main_button_title"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_main_button_icon"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/ic_share" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/llRate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/bg_main_button_title"
                android:gravity="center"
                android:text="Rate"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_main_button_icon"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/rate"
                app:tint="@color/colorPrimary" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/llMore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/bg_main_button_title"
                android:gravity="center"
                android:text="More"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_main_button_icon"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/ic_more"
                app:tint="@color/colorPrimary" />
        </FrameLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_native_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" />

        </androidx.cardview.widget.CardView>

        <com.facebook.ads.NativeAdLayout
            android:id="@+id/fbnative_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>